<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jameel.com.app_1_loginform.MainActivity">
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Login Form"
        android:textColor="#ff1020"
        android:textSize="30dp"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editTxtUsername"
        android:layout_alignStart="@+id/editTxtUsername"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editTxtUsername"
        android:textColor="#000000"

        android:layout_below="@+id/textViewUsername"
        android:layout_alignLeft="@+id/editTxtPassword"
        android:layout_alignStart="@+id/editTxtPassword"
        android:layout_marginTop="18dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTxtPassword"

        android:layout_alignTop="@+id/textViewPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <Button
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:text="Facebook Login"
        android:background="#0F2F62"
        android:textColor="#ffffff"
        android:id="@+id/btnLogin"
        android:layout_marginTop="355dp"
        android:layout_centerHorizontal="true"
        android:onClick="showMessage"/>

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="36dp"
        android:text="Enter Username"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textViewPassword"
        android:layout_alignStart="@+id/textViewPassword" />

    <TextView
        android:id="@+id/textViewPassword"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:text="Enter Password"
        android:layout_marginTop="250dp"
         />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginBottom="13dp"
        android:text="Go on Next Page"
        android:background="#ff1020"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnLogin"
        android:layout_alignStart="@+id/btnLogin" />

</RelativeLayout>
